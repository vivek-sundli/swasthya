{
    "name":"Swasthya",
    "version": "0.1",
    "description": "Digital wellbeing",
    "permissions":["storage","tab"],
    "host_permissions":["https://*"],
    "background":{
        "service_worker": "background.js"
    },
    "content_scripts":[
        {
            "matches":["https://*"],
            "js":["contentScript.js"]
        }
    ],
    "web_accessible_resources":[
        {
            "resources":[
                "assets/bookmark.png",
                "assets/play.png",
                "assets/delete.png",
                "assets/save.png"
            ],
            "matches":["https://*"]
        }
    ],
    "action":{
        "default_icon":{
            "16": "assets/ext-icon.png",
            "24": "assets/ext-icon.png",
            "32": "assets/ext-icon.png"
        },
        "default_title": "Swasthya",
        "default_popup": "popup.html"
    },
    "manifest_version":3
}